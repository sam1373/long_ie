{
    "bert_model_name": "allenai/longformer-base-4096",
    "word_embed_file": "../lstm_fet/enwiki.skip.size200.win10.neg15.sample1e-5.min15.txt",
    "bert_cache_dir": "lm_cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0,
    "use_extra_bert": false,
    "extra_bert": -3,
    "hidden_dim": 300,
    "span_transformer_layers": 0,
    "coref_embed_dim": 16,

