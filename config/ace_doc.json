{
    "bert_model_name": "allenai/longformer-base-4096",
    "bert_cache_dir": "lm_cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "use_extra_bert": false,
    "extra_bert": -3,
    "hidden_dim": 500,
    "span_transformer_layers": 10,
    "coref_embed_dim": 64,

    "file_dir": "../data/",
  
    "train_file": "train.oneie.json",
    "dev_file": "dev.oneie.json",
    "test_file": "test.oneie.json",
    "log_path": "log",
    "ignore_title": false,
    "ignore_first_header": false,

    "batch_size": 1,
    "eval_batch_size": 1,
    "max_epoch": 101,
    "learning_rate": 1e-3,
    "bert_learning_rate": 1e-6,
    "weight_decay": 1e-4,
    "bert_weight_decay": 1e-6,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
  
    "use_gpu": true,
    "gpu_device": 0,

    "max_entity_len": 20,
    "max_trigger_len": 20,

    "max_sent_len": 2500,

    "use_avg_repr": false,
    "use_end_boundary": true,

    "use_first_wp": false,

    "use_extra_word_embed": true,

    "classify_entities": true,
    "classify_relations": false,
    "classify_triggers": false,
    "classify_roles": false,
    "do_coref": true
}
